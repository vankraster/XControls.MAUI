<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="XControls.Maui.Sample.MainPage"
             xmlns:ctrls="clr-namespace:XControls.Maui;assembly=XControls.Maui">  

   <ScrollView>  
       <VerticalStackLayout  
           Padding="30,0"  
           Spacing="25">  

           <ctrls:XSwitchDraw IsToggled="True" Size="Small" />  
           <ctrls:XSwitchDraw IsToggled="True" Size="Medium" />  
           <ctrls:XSwitchDraw IsToggled="True" Size="Large" />  
           <ctrls:XCheckbox IsChecked="True" />

            <Switch IsToggled="True"/>
        </VerticalStackLayout>  
   </ScrollView>  

</ContentPage>
